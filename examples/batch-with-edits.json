{
  "jobs": [
    {
      "prompt": "A person walking in a park during autumn",
      "output_path": "base_video.mp4",
      "duration": 5,
      "aspect_ratio": "16:9",
      "resolution": "720p"
    },
    {
      "prompt": "Change the season to winter with snow falling",
      "video_url": "https://your-server.com/base_video.mp4",
      "output_path": "winter_version.mp4"
    },
    {
      "prompt": "Make it nighttime with street lights glowing",
      "video_url": "https://your-server.com/base_video.mp4",
      "output_path": "night_version.mp4"
    }
  ],
  "output_dir": "./output/variations",
  "max_concurrent": 1,
  "poll_interval": 5000,
  "max_poll_attempts": 150,
  "default_model": "grok-imagine-video",
  "default_resolution": "720p",
  "retry_policy": {
    "max_retries": 2,
    "retry_delay_ms": 2000,
    "retry_on_errors": ["rate_limit", "timeout", "429", "503"]
  }
}
