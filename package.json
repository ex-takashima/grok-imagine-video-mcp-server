{
  "name": "grok-imagine-video-mcp-server",
  "version": "1.0.2",
  "description": "MCP server for xAI Grok Imagine Video API - Generate and edit videos using grok-imagine-video model",
  "main": "dist/index.js",
  "type": "module",
  "bin": {
    "grok-imagine-video-mcp-server": "dist/index.js",
    "grok-imagine-video-batch": "dist/cli/batch.js"
  },
  "files": [
    "dist/**/*",
    "README.md",
    "README.ja.md",
    "LICENSE",
    ".env.example",
    "examples/**/*"
  ],
  "scripts": {
    "build": "tsc",
    "prepublishOnly": "npm run build",
    "start": "node dist/index.js",
    "batch": "node dist/cli/batch.js",
    "dev": "tsc --watch",
    "pack": "npm pack"
  },
  "keywords": [
    "mcp",
    "xai",
    "grok",
    "grok-imagine-video",
    "video-generation",
    "video-editing",
    "claude",
    "model-context-protocol",
    "ai",
    "text-to-video",
    "image-to-video",
    "anthropic",
    "batch"
  ],
  "author": "Junji Takashima <takajyun00@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ex-takashima/grok-imagine-video-mcp-server.git"
  },
  "bugs": {
    "url": "https://github.com/ex-takashima/grok-imagine-video-mcp-server/issues"
  },
  "homepage": "https://github.com/ex-takashima/grok-imagine-video-mcp-server#readme",
  "dependencies": {
    "@aws-sdk/client-s3": "^3.700.0",
    "@modelcontextprotocol/sdk": "^1.0.4",
    "dotenv": "^16.4.7"
  },
  "devDependencies": {
    "@types/node": "^22.18.8",
    "typescript": "^5.7.2"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
